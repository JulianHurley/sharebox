- unless user_signed_in?
	.h1 Welcome to share box
	.p The file sharing web application you can't ignore
- else


	.asset_list_header
		.file_name_header 
			File Name
		.file_size_header
			Size
		.file_last_updated_header
			Modified

	.asset_list
		= render partial: 'static/folder', collection: @folders
		= render partial: 'static/asset', collection: @assets

	#invitation_form{ title: 'Invite others to share', style: 'display:block' }
		=form_tag '/home/share' do
			%label{ for: 'email_addresses' }
				Enter Recipient Email Address